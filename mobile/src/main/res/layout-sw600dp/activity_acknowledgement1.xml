<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_blue"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:src="@drawable/ic_back" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30sp"
                        android:gravity="center"
                        android:text="Acknowledgement"
                        android:textColor="@color/white"
                        android:textSize="@dimen/big_text_size" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_point_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lib_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/mid_big_text_size"/>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/activity_vertical_margin"/>

                <TextView
                    android:id="@+id/tv_lib_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/mid_big_text_size"/>

                <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/activity_vertical_margin"/>

                <TextView
                    android:id="@+id/tv_lib_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/mid_big_text_size"/>

                <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/activity_vertical_margin"/>

                <TextView
                    android:id="@+id/tv_lib_title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/mid_big_text_size"/>

                <TextView
                    android:id="@+id/tv_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/activity_vertical_margin"/>


                <TextView
                    android:id="@+id/tv_lib_title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/mid_big_text_size"/>

                <TextView
                    android:id="@+id/tv_content4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/activity_vertical_margin"/>

                <TextView
                    android:id="@+id/tv_lib_title5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/mid_big_text_size"/>

                <TextView
                    android:id="@+id/tv_content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="https://i.imgur.com/7T9364v.gifv"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/activity_vertical_margin"/>


            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/ll_point_not_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/medium_size"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

